# Firebase (client - for sign-in)
# Get these from Firebase Console → Project settings → General → Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
# Optional: for Analytics
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Admin SDK (server - for API routes)
# Get from Firebase Console → Project settings → Service accounts → Generate new private key
# Option 1: Paste the full JSON as one line (recommended for local dev)
FIREBASE_SERVICE_ACCOUNT_KEY=

# Option 2: Or set project + client email + private key (e.g. for Vercel)
# FIREBASE_PROJECT_ID=   (optional if NEXT_PUBLIC_FIREBASE_PROJECT_ID is set)
# FIREBASE_ADMIN_CLIENT_EMAIL=
# FIREBASE_ADMIN_PRIVATE_KEY=

# Main site URL (for "Back to site" link)
NEXT_PUBLIC_MAIN_SITE_URL=https://takshashila26.in

# This app's URL (server-side; e.g. for redirects or links in emails)
# Local: APP_URL=http://localhost:3000
# Vercel: APP_URL=https://tk26admin.vercel.app
APP_URL=

# For fix-stuck-payment: QR signing
QR_SECRET_KEY=

# For fix-stuck-payment: Email
RESEND_API_KEY=

# For fix-stuck-payment: Cashfree
NEXT_PUBLIC_CASHFREE_ENV=sandbox
CASHFREE_APP_ID=
CASHFREE_SECRET_KEY=

# Upstash Redis — distributed rate limiting (required in production)
# Create a free database at https://console.upstash.com
# Use the REST API URL and token (not the Redis connection string)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
